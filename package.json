{
    "name": "bello-hotel-concierge",
    "version": "0.1.0",
    "description": "Premium concierge services platform for hotels with subscription-based access",
    "private": true,
    "scripts": {
        "dev": "next dev --turbopack",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "type-check": "tsc --noEmit",
        "db:generate": "prisma generate",
        "db:push": "prisma db push",
        "db:studio": "prisma studio",
        "db:migrate": "prisma migrate dev",
        "db:migrate:prod": "prisma migrate deploy",
        "db:reset": "prisma migrate reset --force",
        "db:seed": "prisma db seed",
        "build:analyze": "ANALYZE=true npm run build",
        "test": "echo \"No tests specified\" && exit 0",
        "postinstall": "prisma generate",
        "prod:setup": "npm ci && npm run db:generate && npm run build",
        "health": "curl -f http://localhost:3000/api/health || exit 1",
        "db:switch:postgres": "node scripts/switch-to-postgres.js",
        "db:switch:sqlite": "node scripts/switch-to-sqlite.js",
        "cleanup": "node scripts/cleanup-old-requests.js",
        "setup:cleanup": "bash scripts/setup-cleanup.sh",
        "billing:test": "node scripts/test-subscription-billing.js",
        "billing:run": "curl -X GET http://localhost:3000/api/cron/subscription-billing"
    },
    "dependencies": {
        "@headlessui/react": "^2.2.7",
        "@prisma/client": "^6.14.0",
        "@sentry/nextjs": "^10.5.0",
        "@sentry/react": "^10.5.0",
        "@types/bcryptjs": "^2.4.6",
        "@zxing/library": "^0.21.3",
        "bcryptjs": "^3.0.2",
        "next": "15.4.6",
        "next-auth": "^4.24.10",
        "prisma": "^6.14.0",
        "razorpay": "^2.9.6",
        "react": "19.1.0",
        "react-dom": "19.1.0",
        "react-hot-toast": "^2.6.0",
        "web-push": "^3.6.7",
        "zod": "^4.0.17"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3",
        "@tailwindcss/postcss": "^4",
        "@types/node": "^20",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "critters": "^0.0.23",
        "eslint": "^9",
        "eslint-config-next": "15.4.6",
        "tailwindcss": "^4",
        "ts-node": "^10.9.2",
        "typescript": "^5"
    },
    "keywords": [
        "hotel",
        "concierge",
        "service",
        "hospitality",
        "nextjs",
        "typescript",
        "subscription"
    ],
    "author": "Bello Team",
    "license": "MIT",
    "prisma": {
        "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
    }
}
